<UserControl
    x:Class="PacMan.App.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black">

    <Border Padding="20">
        <Grid Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="PAC-MAN"
                       FontSize="42"
                       Foreground="Yellow"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Grid.Row="0"/>

            <Grid Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Canvas Background="#1a1a1a"
                        Width="600"
                        Height="440"/>

                <TextBlock Text="PRESSIONE ENTER PARA COMEÃ‡AR"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Visibility="{Binding WelcomeMessageVisibility, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <TextBlock Text="Pressione ESC para sair"
                       Foreground="Gray"
                       FontSize="12"
                       Grid.Row="2"
                       Margin="0,10,0,0"/>
        </Grid>
    </Border>
</UserControl>
