<UserControl
    x:Class="PacMan.App.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:viewmodels="using:PacMan.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IsTabStop="True"
    AllowFocusOnInteraction="True">

    <Border Padding="20" x:Name="RootBorder">
        <Grid Background="Black" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,10">
                <TextBlock
                    Text="PAC-MAN"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="Yellow"
                    HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="SCORE: " FontSize="24" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentScore}" FontSize="24" Foreground="Yellow" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="LIVES: " FontSize="24" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="{Binding LivesRemaining}" FontSize="24" Foreground="Cyan" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1"
                  Grid.Column="0"
                  SizeChanged="GameContainer_SizeChanged">
                <Canvas x:Name="GameCanvas"
                        Background="#000000"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                <Border Background="#AA000000"
                        Visibility="{Binding IsPaused, Converter={StaticResource BoolToVisibilityConverter}}"
                        Canvas.ZIndex="200"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <TextBlock Text="PAUSED"
                               Foreground="White"
                               FontSize="36"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <Border Background="#CC000000"
                        Visibility="{Binding IsGameOver, Converter={StaticResource BoolToVisibilityConverter}}"
                        Canvas.ZIndex="300"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                        <TextBlock Text="GAME OVER" Foreground="Red" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Pressione R para reiniciar" Foreground="White" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                            <Button Content="Restart" Click="Restart_Click" Padding="16,6"/>
                            <Button Content="Menu" Click="Menu_Click" Padding="16,6"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#CC000000"
                        Visibility="{Binding IsWin, Converter={StaticResource BoolToVisibilityConverter}}"
                        Canvas.ZIndex="250"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                        <TextBlock Text="YOU WIN!" Foreground="Lime" FontSize="38" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="PrÃ³xima rodada em 3s" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Margin="10"
                        Background="#222"
                        Padding="10">
                <TextBlock Text="HIGH SCORES"
                           Foreground="Yellow"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <ListView ItemsSource="{Binding HighScores}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding PlayerName}"
                                           Foreground="White"
                                           FontSize="14"/>
                                <TextBlock Text="{Binding Score}"
                                           Grid.Column="1"
                                           Foreground="Cyan"
                                           FontWeight="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,10">
                <TextBlock Text="ESC: sair" Foreground="Gray"/>
                <TextBlock Text="P: pause" Foreground="Gray"/>
                <TextBlock Text="R: restart" Foreground="Gray"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
