<UserControl
    x:Class="PacMan.App.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:viewmodels="using:PacMan.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IsTabStop="True"
    AllowFocusOnInteraction="True">

    <Border Padding="20" x:Name="RootBorder">
        <Grid Background="Black" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="PAC-MAN"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       FontSize="42"
                       Foreground="Yellow"
                       FontWeight="Bold"
                       Grid.Row="0"/>

            <Grid Grid.Row="1"
                  Grid.Column="0"
                  SizeChanged="GameContainer_SizeChanged">
                <Canvas x:Name="GameCanvas"
                        Background="#1a1a1a"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            </Grid>

            <TextBlock Text="Aperte ENTER para iniciar"
                       Grid.Row="1"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       Foreground="White"
                       Canvas.ZIndex="100"
                       Visibility="{x:Bind ViewModel.WelcomeMessageVisibility, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}"/>

            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Margin="10"
                        Background="#222"
                        Padding="10">
                <TextBlock Text="HIGH SCORES"
                           Foreground="Yellow"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <ListView ItemsSource="{Binding HighScores}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding PlayerName}"
                                           Foreground="White"
                                           FontSize="14"/>
                                <TextBlock Text="{Binding Score}"
                                           Grid.Column="1"
                                           Foreground="Cyan"
                                           FontWeight="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <TextBlock Text="Pressione ESC para sair"
                       Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>
        </Grid>
    </Border>
</UserControl>
